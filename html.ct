	<% for (int j = 0; pages[i][j].link; j++) { %>
	<% if  (pages[i][j].prio >= 0) { %>
	<url>
		<loc><%% "%s%s", PREFIX, pages[i][j].link %></loc>
		<priority><%% "%3.1f", pages[i][j].prio %></priority>
	</url>
	<% } } } %>
</urlset>
<% } %>
